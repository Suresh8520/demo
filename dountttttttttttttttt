# Set the download URL and the destination folder
$zipUrl = "https://example.com/your-file.zip"
$destinationFolder = "C:\path\to\your\destination\folder"

# Create a new WebClient object
$webClient = New-Object System.Net.WebClient

try {
    # Download the zip file
    $webClient.DownloadFile($zipUrl, "$destinationFolder\file.zip")

    # Create a Shell.Application COM object to extract the contents
    $shell = New-Object -ComObject Shell.Application
    $zipFolder = $shell.NameSpace("$destinationFolder\file.zip")
    $destination = $shell.NameSpace($destinationFolder)

    # Extract the contents of the zip file
    $destination.CopyHere($zipFolder.Items(), 16)

    # Wait for the extraction process to finish
    Start-Sleep -Seconds 5

    # Delete the zip file if needed
    Remove-Item "$destinationFolder\file.zip" -Force

    Write-Host "Extraction completed successfully."
} catch {
    Write-Host "An error occurred: $_"
}
